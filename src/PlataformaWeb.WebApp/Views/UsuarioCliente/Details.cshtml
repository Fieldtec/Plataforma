@model UsuarioClienteViewModel;
@using PlataformaWeb.WebApp.Extensions
@inject PlataformaWeb.Business.Interfaces.IUser AppUser 
@{ ViewData["Title"] = "Detalhe do Usuário"; }

<div class="row align-items-center justify-content-center">    
    <div class="col-xl-6 col-lg-12">
        <fieldset class="form h-100">
            <legend class="FundoDestaque">Dados Pessoais</legend>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required type="email" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" required readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control telefone" readonly />
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (AppUser.EhCliente() || AppUser.EhTecnico())
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;Editar</a>        
    }
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>

