@model ClienteViewModel;
@using PlataformaWeb.WebApp.Extensions
@inject PlataformaWeb.Business.Interfaces.IUser AppUser

@{ ViewData["Title"] = "Cadastro do Cliente"; }

<div class="row align-items-center justify-content-center">   
    <div class="col-lg-7">
        <fieldset class="form h-100">
            <legend class="FundoDestaque">Dados Pessoais</legend>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" required readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required type="email" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" required readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control telefone" readonly />
                </div>
            </div>           
        </fieldset>
    </div>
    <div class="col-lg-5">
        <fieldset class="form">
            <legend class="FundoDestaque">Dados da Propriedade</legend>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label asp-for="NomePropriedade" class="control-label"></label>
                    <input asp-for="NomePropriedade" class="form-control" required readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="CpfCnpj" class="control-label"></label>
                    <input asp-for="CpfCnpj" class="form-control cnpjCpf" required readonly />
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="DataValidadeLicenca" class="control-label"></label>
                    <input asp-for="DataValidadeLicenca" asp-format="{0:dd/MM/yyyy}" type="text" class="form-control data" required readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control" required readonly />
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Uf" class="control-label"></label>
                    <select class="form-control LetraFormulario" asp-for="Uf" asp-items="this.ObterSelectEstados()" readonly></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="QtdeAnimais" class="control-label"></label>
                    <input asp-for="QtdeAnimais" class="form-control inteiro" required readonly />
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="AreaHectare" class="control-label"></label>
                    <input asp-for="AreaHectare" class="form-control decimal" required readonly />
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (AppUser.EhTecnico())
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning" autofocus><i class="fa fa-edit"></i>&nbsp;Editar</a>
    }
    <a asp-controller="Autenticacao" asp-action="SelecionarClienteView" asp-route-idCliente="@Model.Id" class="btn btn-success"><i class="fa fa-check"></i>&nbsp;Selecionar</a>
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>
