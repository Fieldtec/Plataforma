@model PastoCurralViewModel;
@using PlataformaWeb.WebApp.Extensions
@inject PlataformaWeb.Business.Interfaces.IUser AppUser

@{ ViewData["Title"] = "Detalhe Pasto/Curral: " + @Model.Nome; }

<div class="row align-items-center justify-content-center">
    <div class="col-xl-7 col-lg-10">
        <fieldset class="form h-100">
            <legend class="FundoDestaque">Dados Pasto/Curral</legend>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-control" asp-items="this.ObterSelectTipoPastoCurral()" readonly></select>
                </div>
                @if (Model.Tipo == PlataformaWeb.Business.Enums.TipoPastoCurral.Curral)
                {
                    <div class="form-group col-md-4">
                        <label asp-for="Linha" class="control-label"></label>
                        <input asp-for="Linha" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control inteiro" readonly />
                    </div>
                }
            </div>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Capacidade" class=" control-label"></label>
                    <input asp-for="Capacidade" class="form-control inteiro" readonly />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Lotacao" class="control-label"></label>
                    <input asp-for="Lotacao" class="form-control inteiro" readonly />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Metragemcocho" class="control-label"></label>
                    <input asp-for="Metragemcocho" class="form-control decimal" readonly />
                </div>
                @if (Model.Tipo == PlataformaWeb.Business.Enums.TipoPastoCurral.Curral)
                {
                    <div class="form-group col-md-4">
                        <label asp-for="OrdemFornecimento" class="control-label"></label>
                        <input asp-for="OrdemFornecimento" class="form-control inteiro" readonly />
                    </div>
                }
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (!AppUser.EhAdmin())
    {
        <a autofocus asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;Editar</a>
    }
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>

