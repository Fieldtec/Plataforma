@model CategoriaViewModel;
@inject PlataformaWeb.Business.Interfaces.IUser AppUser

@{ ViewData["Title"] = "Detalhe Categoria: " + @Model.Nome; }

<div class="row align-items-center justify-content-center">    
    <div class="col-xl-7 col-lg-10">
        <fieldset class="form h-100">
            <legend class="FundoDestaque">Dados Categoria</legend>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input autofocus asp-for="Nome" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="IdadeMinima" class=" control-label"></label>
                    <input asp-for="IdadeMinima" class="form-control inteiro" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IdadeMaxima" class=" control-label"></label>
                    <input asp-for="IdadeMaxima" class="form-control inteiro" readonly />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Sexo" class="control-label"></label>
                    <input autofocus asp-for="Sexo" class="form-control" readonly/>
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (!AppUser.EhAdmin())
    {
<a autofocus asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;Editar</a>}
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>

