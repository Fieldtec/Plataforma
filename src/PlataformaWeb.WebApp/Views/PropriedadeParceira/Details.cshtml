@model PropriedadeParceiraViewModel;
@using PlataformaWeb.WebApp.Extensions
@inject PlataformaWeb.Business.Interfaces.IUser AppUser

@{ ViewData["Title"] = "Detalhe Propriedade: " + @Model.Nome; }

<div class="row align-items-center justify-content-center">    
    <div class="col-xl-7 col-lg-11">
        <fieldset class="form h-100" disabled>
            <legend class="FundoDestaque">Dados da Propriedade Parceira</legend>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" required />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Cidade" class=" control-label"></label>
                    <input asp-for="Cidade" class="form-control" required />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Uf" class=" control-label"></label>
                    <select asp-for="Uf" class="form-control LetraFormulario" asp-items="this.ObterSelectEstados()" required></select>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="InscricaoEstadual" class="control-label"></label>
                    <input asp-for="InscricaoEstadual" class="form-control" />
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (!AppUser.EhAdmin())
    {
<a autofocus asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;Editar</a>}
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>

