@model FornecedorInsumoViewModel;
@using PlataformaWeb.WebApp.Extensions 

@{ ViewData["Title"] = "Confirma a exclusão?"; }

<form id="form" asp-action="Delete" enctype="multipart/form-data" novalidate>
    <div class="row align-items-center justify-content-center">
        <div class="col-xl-7 col-lg-10">
            <vc:summary></vc:summary>
        </div>
        <div class="col-xl-7 col-lg-10">
            <fieldset class="form h-100">
                <legend class="FundoDestaque">Dados do Fornecedor</legend>
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Cidade" class=" control-label"></label>
                        <input asp-for="Cidade" type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Uf" class="control-label"></label>
                        <select asp-for="Uf" asp-items="this.ObterSelectEstados()" type="text" class="form-control" readonly></select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CpfCnpj" class=" control-label"></label>
                        <input asp-for="CpfCnpj" class="form-control cnpjCpf" readonly />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Telefone" class=" control-label"></label>
                        <input asp-for="Telefone" class="form-control telefone" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ContatoPessoa" class=" control-label"></label>
                        <input asp-for="ContatoPessoa" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class=" control-label"></label>
                        <input asp-for="Email" class="form-control email" readonly />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="text-center mt-3">
        <button autofocus type="submit" class="btn btn-danger"><i class="fa fa-trash"></i>&nbsp;Remover</button>
        <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
    </div>
</form>
