@model FornecedorInsumoViewModel;
@using PlataformaWeb.WebApp.Extensions; 
@inject PlataformaWeb.Business.Interfaces.IUser AppUser

@{ ViewData["Title"] = "Detalhe Fornecedor: " + @Model.Nome; }

<div class="row align-items-center justify-content-center">    
    <div class="col-xl-7 col-lg-10">
        <fieldset class="form h-100" disabled>
            <legend class="FundoDestaque">Dados do Fornecedor</legend>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" required />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Cidade" class=" control-label"></label>
                    <input asp-for="Cidade" type="text" class="form-control" required />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Uf" class="control-label"></label>
                    <select asp-for="Uf" asp-items="this.ObterSelectEstados()" type="text" class="form-control" required></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CpfCnpj" class=" control-label"></label>
                    <input asp-for="CpfCnpj" class="form-control cnpjCpf" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Telefone" class=" control-label"></label>
                    <input asp-for="Telefone" class="form-control telefone" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ContatoPessoa" class=" control-label"></label>
                    <input asp-for="ContatoPessoa" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class=" control-label"></label>
                    <input asp-for="Email" class="form-control email" />
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="text-center mt-3">
    @if (!AppUser.EhAdmin())
    {
<a autofocus asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;Editar</a>}
    <a asp-action="Index" class="btn btn-info"><i class="fa fa-times"></i>&nbsp;Voltar</a>
</div>

