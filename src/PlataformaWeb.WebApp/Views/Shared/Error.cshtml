@model ErrorViewModel
@{
    ViewData["Title"] = @Model.Titulo;
}
<div class="container">
    <div style="padding-top: 100px; text-align: center">
        @{
            <h1 style="font-size: 12em;">@Html.Raw(Model?.ErroCode ?? 500)</h1>
            if (Model == null)
            {
                <h2>Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h2>
            }
            else
            {
                <h2>@Html.Raw(Model.Mensagem)</h2>
            }
        }
    </div>
</div>